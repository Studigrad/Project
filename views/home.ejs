                 <% } %>
                 <% } %> 
            </div>
            <div class="col-3">
                <div class="card" style="width: 100%;">
                    <div class="mx-auto" > 
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" class="card-img-top" alt="user" width="10" height="150">
                    </div>
                    <div class="card-body">                 
                      <h5 class="card-title">Welcome <%= foundUser.username %> </h5>
                      <a href="/new" class="btn btn-primary">Make New Note </a>
                    </div>
                  </div>

            </div>
          </div>


        </main>
        <script>
          function myFunction() {
            
            var copyText = document.getElementById("myInput");
          
          
            copyText.select();
            copyText.setSelectionRange(0, 99999); 
          
           
            navigator.clipboard.writeText(copyText.value);
            
            
            alert("Copied the text: " + copyText.value);
          }
          </script>
