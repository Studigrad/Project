           <div class="row no-gutters">
            <div class="col-9">
                <h1>HomePage</h1>
                  <% if(foundUser.note) {%> 
                  <% for(let notes of foundUser.note) {%>
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <h4 class="card-title"><%=notes.title%></h4>
                    
                    <p class="card-text" id="myInput"><%=notes.text%></p>
                    <a class="card-link btn btn-info btn-sm" href="/edit">Edit</a>
                    
                    <button class="btn btn-secondary btn-sm" onclick="myFunction()">Copy to clipboard</button>
                    <a href="#" class="fa fa-facebook"></a>
                    <a href="#" class="fa fa-twitter"></a>
                  </div>
                  
